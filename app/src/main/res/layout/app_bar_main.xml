        </LinearLayout>
    </ScrollView>

    <!-- Content placeholder -->
    <FrameLayout
        android:id="@+id/main_content_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#121212"/>
</LinearLayout>
