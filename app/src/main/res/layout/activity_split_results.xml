<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/buslight2"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitleResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Split Results"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/blue_border"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Total Cost -->
    <TextView
        android:id="@+id/tvTotalCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total cost â€” K0.00"
        android:textColor="#FFFFFF"
        android:background="@drawable/blue_border"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <!-- RecyclerView for results -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvResults"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"/>

    <!-- Export Button -->
    <Button
        android:id="@+id/btnExport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export CSV / Share"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/md_primary"
        android:textStyle="bold"
        android:paddingVertical="12dp"/>
</LinearLayout>
