<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F8F9FA"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.TripListActivity">

    <!-- Top Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Trips"
            android:textColor="#212121"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_person"
            android:contentDescription="Profile Icon"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="#1E88E5" />
    </LinearLayout>

    <!-- RecyclerView for trips -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTrips"
        android:layout_below="@id/headerLayout"
        android:layout_above="@+id/fabAdd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:background="@drawable/blue_border"
        android:padding="6dp"
        android:layout_margin="10dp"
        android:clipToPadding="false"
        android:layout_marginBottom="60dp" />

    <!-- Empty state text -->
    <TextView
        android:id="@+id/tvEmpty"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:text="No trips yet.\nTap + to add one!"
        android:textAlignment="center"
        android:textColor="#757575"
        android:textSize="18sp"
        android:padding="24dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Progress bar while loading -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:indeterminateTint="#1E88E5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Floating Add Trip Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="42dp"
        android:contentDescription="Add Trip"
        android:src="@drawable/ic_add"
        android:tint="@android:color/white"
        app:backgroundTint="#1E88E5"
        app:elevation="6dp" />

</RelativeLayout>
