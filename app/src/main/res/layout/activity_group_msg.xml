<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".UI.GroupActivityMsg">

    <!-- ================= TOP IMAGE ================= -->
    <ImageView
        android:id="@+id/imageMu"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:contentDescription="MU Logo"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ================= TEXT VIEW ================= -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:lineSpacingExtra="6dp"
        android:text="CHAWA SANG'AMBA: 202303123\nGIVEN NKONDE: 202307227\nSIMON CHILA: 202304076\nCHRIS NYIRONGO: 202303935\nMARGRET MWANZA: 202309025\nFRIDAH MULALA: 202303219\nPHILIP SAKAYUTA: 202308496\nTEMWANI KASALA: 202305809\nNALUPYA CINDY: 202204815\nCHISHIBA NYEMBELE: 20200032"
        android:textColor="#FF1744"
        android:textSize="18sp"
        android:background="#1E1E1E"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginHorizontal="16dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:scrollbars="vertical"
        android:overScrollMode="ifContentScrolls"
        app:layout_constraintTop_toBottomOf="@id/imageMu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ================= CONTINUE BUTTON ================= -->
    <Button
        android:id="@+id/btn_continue"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#FF1744"
        android:text="Continue"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:stateListAnimator="@null"
        android:clipToOutline="true"
        android:paddingHorizontal="16dp"
        android:layout_gravity="center"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
