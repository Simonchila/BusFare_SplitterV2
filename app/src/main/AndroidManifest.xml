<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.BusFare_SplitterV2">


    <activity
            android:name=".UI.ProfileActivity"
            android:exported="false" />

        <activity android:name=".UI.Settings"
            android:exported="false" />




        <activity android:name=".UI.SupportDetails" />
        <activity android:name=".UI.AboutUs" />
        <activity
            android:name=".UI.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".UI.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".UI.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.TripListActivity"
            android:exported="false" />
        <activity
            android:name=".UI.TripDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".UI.AddTripActivity"
            android:exported="false" />
    </application>

</manifest>